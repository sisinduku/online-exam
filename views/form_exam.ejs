<!DOCTYPE html>
<html>

<head>
  <% include ./partials/head %>
</head>

<body>
  <% include ./partials/header %>
    <div class="container">
      <h2><%= title %></h2>
      <% if(err) { %>
        <div class="card text-white bg-danger">
          <div class="card-body">
            <%= err.message %>
          </div>
        </div>
        <br>
        <% }
          let exam = {}
          if(hasOwnProperty('exams')){
            exam.examName = exams.examName
            exam.jumlahSoal = exams.jumlahSoal

        %>
          <form action="/exams/edit/<%= exams.id %>" method="post">
            <%
      } else {
        %>
              <form action="/exams/add" method="post">
                <%} %>
                  <div class="form-group">
                    <label for="examName">Exam Name</label>
                    <input type="text" name="examName" placeholder="Exam name Goes Here" required class="form-control" value="<%= exam.examName %>">
                  </div>
                  <div class="form-group">
                    <label for="jumlahSoal">Total Question</label>
                    <input type="number" name="jumlahSoal" placeholder="Total question Goes Here" required class="form-control" value="<%= exam.jumlahSoal %>">
                  </div>
                  <div class="form-group">
                    <input class="btn btn-primary" type="submit" name="submit" value="Submit" class="form-control">
                  </div>
              </form>
    </div>
    <% include ./partials/footer %>
</body>

</html>
